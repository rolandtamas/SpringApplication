<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<context:annotation-config/>

	<bean id="autovehicle" class="exercise2.Autovehicle">
		<property name="price" value="999.99"/>
		<property name="maxSpeed" value="180"/>
		<property name="brand" value="Toyota"/>
		<property name="yearOfFabrication" value="1998"/>
	</bean>
	
	<bean id="motorcycle" class="exercise2.Motorcycle">
		<constructor-arg value="750.00"/>
		<constructor-arg value="120"/>
		<constructor-arg value="offroad"/>
	</bean>
	
	<bean id="truck" class="exercise2.Truck">
		<property name="price" value="2999.99"/>
		<property name="maxSpeed" value="120"/>
		<property name="load" value="5000"/>
	</bean>
</beans>